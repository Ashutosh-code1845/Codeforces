#include <bits/stdc++.h>
#define fastIO ios::sync_with_stdio(false); cin.tie(0)
using namespace std;

int main() {
    fastIO;
    int t;
    cin>>t;
    while(t--)
    {
        int n,x;
        cin>>n>>x;
        if(n<=2)
        cout<<1<<endl;
        else
        {
            n-=2;
            
            if(n%x !=0 )
            cout<<ceil(n/x)+2<<endl;
            else
            cout<<(n/x)+1<<endl;
        }
    }
    return 0;
}
