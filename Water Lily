#include <bits/stdc++.h>
#define fastIO ios::sync_with_stdio(false); cin.tie(0)
using namespace std;

void solve()
{
    int h,l;
    cin>>h>>l;
    double ans = (pow(l,2)-pow(h,2))/(2*h);
    
    cout<<fixed<< setprecision(13) << ans <<endl;
}
