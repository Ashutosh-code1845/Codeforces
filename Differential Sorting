using namespace std;
using ll = long long;
 
void solve() {
    int n;
    cin >> n;
    int arr[n];
    for (auto &x : arr)
        cin >> x;
    if (is_sorted(arr, arr + n)) {
        cout << 0 << '\n';
        return;
    }
    unless(arr[n - 2] <= arr[n - 1] && arr[n - 1] >= 0) {
        cout << -1 << '\n';
        return;
    }
    cout << n - 2 << '\n';
    for (int i = 0; i < n - 2; i++) {
        cout << i + 1 << " " << n - 1 << " " << n << '\n';
    }
}
 
int main() {
    fastIO;
    int t = 1;
    cin >> t;
    while (t--) {
        solve();
    }
}
